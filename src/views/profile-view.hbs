{{> menu active="profile"}}

<section class="section">
    <div class="box">
        <h1 class="title">User Details</h1>
            <label class="label">Name</label>
            <p class="subtitle"> {{user.firstName}} {{user.lastName}} </p>
            <label class="label">Email</label>
            <p class="subtitle">{{user.email}}</p>
            <label class="label">Password</label>
            <p class="subtitle">******</p>    
    </div>
</section>

<section class="section">
    <div class="box">
    <h1 class="title">Edit Profile</h1>
    <form action="/profile/{{user._id}}/update" method="POST">
        <label class="label">Name</label>
            <div class="field is-horizontal">
                <div class="field-body">
                    <div class="field">
                        <input class="input" type="text" placeholder="Enter first name" name="firstName">
                    </div>
                    <div class="field">
                        <input class="input" type="text" placeholder="Enter last name" name="lastName">
                    </div>
                </div>
            </div>
            <div class="field">
                <label class="label">Email</label> <input class="input" type="text" placeholder="Enter email" name="email">
            </div>
            <div class="field">
                <label class="label">Password</label> <input class="input" type="password" plaholder="Enter password" name="password">
            </div>
            <div class="field is-grouped">
                <button class="button is-link">Update Profile</button>
            </div>
    </form>
    </div>
</section>

<section class="section">
    <div class="box">
        <h1 class="title">Delete Account</h1>
        <form action="/profile/{{user._id}}/delete" method="POST">
                <p>Delete My Artmarks Account</p>
                 <button class="button is-link">Delete this account</button>
        </form>
    </div>
</section>