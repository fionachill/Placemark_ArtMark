<div class="columns is-multiline">
    {{#each artmarks}}
        <div class="column is-one-third">
            <div class="card">
                <div class="card-image">
                    <figure class="image is-square">
                        <img src="{{artmark.img}}" alt="Placeholder image">
                    </figure>
                </div>
                <div class="media-content">
                    <p class="title">
                        {{title}}
                    </p>
                    <p class="subtitle">
                        {{artist}}
                    </p>
                </div>
                <footer class="card-footer">
                    <a href="/artmark/{{_id}}" class="card-footer-item">
                        <span class="icon is-small">
                            <i class="fas fa-eye"></i>
                        </span>
                    </a>
                    <a href="/artmark/editartmark/{{_id}}" class="card-footer-item">
                        <span class="icon is-small">
                            <i class="fas fa-pen"></i>
                        </span>
                    </a>
                    <a href="/dashboard/deleteartmark/{{_id}}" class="card-footer-item">
                        <span class="icon is-small">
                            <i class="fas fa-trash"></i>
                        </span>
                    </a>
                </footer>
            </div>
        </div>
    {{/each}}
</div>